map $http_upgrade $connection_upgrade{
        default upgrade;
        '' close;
}

upstream websocket{
        server 127.0.0.1:8080;
}

server {
        listen 80;
        listen [::]:80;

        access_log /var/log/nginx/access.log combined;
        error_log /var/log/nginx/error.log debug;

        location /socket.oi {
                proxy_pass http://websocket/api/v1/client/;
                proxy_http_version 1.1;
                proxy_redirect off;
                proxy_buffering off;
                proxy_set_header Content-Type application/json;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header Host $host;
                proxy_set_header Upgrade "websocket";
                proxy_set_header Connection "Upgrade";
                proxy_set_header X-Real-IP $remote_addr;
        }
        location /api/v1/client {
                proxy_pass http://websocket/api/v1/client/;
                proxy_http_version 1.1;
                proxy_redirect off;
                proxy_buffering off;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header Host $host;
                proxy_set_header Upgrade "websocket";
                proxy_set_header Connection "Upgrade";
                proxy_set_header X-Real-IP $remote_addr;
        }

        location /api/v1/operator {
                proxy_pass http://websocket/api/v1/operator/;
                proxy_http_version 1.1;
                proxy_redirect off;
                proxy_buffering off;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header Host $http_host;
                proxy_set_header Upgrade "websocket";
                proxy_set_header Connection "Upgrade";
                proxy_set_header X-Real-IP $remote_addr;
                proxy_connect_timeout 1d;
                proxy_send_timeout 1d;
                proxy_read_timeout 1d;
        }

        root /home/tp/front;
        index index.html;
        gzip on;
        gzip_types text/plain text/css application/javascript text/javascript;

        location ~^/new-messages/?$ {
                rewrite ^/new-messages/?$ / last;
        }

        location ~^/new-messages/([0-9]*)/info/?$ {
                rewrite ^/new-messages/([0-9]*)/info/?$ / last;
        }

        location ~^/active-messages/?$ {
                rewrite ^/active-messages/?$ / last;
        }

        location ~^/active-messages/([0-9]*)/?$ {
                rewrite ^/active-messages/([0-9]*)/?$ / last;
        }

        location ~^/active-messages/([0-9]*)/info/? {
                rewrite ^/active-messages/([0-9]*)/info/?$ / last;
        }

        location ~^/closed-messages/?$ {
                rewrite ^/closed-messages/?$ / last;
        }

        location ~^/closed-messages/([0-9]*)/?$ {
                rewrite ^/closed-messages/([0-9]*)/?$ / last;
        }

        location ~^/closed-messages/([0-9]*)/info/?$ {
                rewrite ^/closed-messages/([0-9]*)/info/?$ / last;
        }

        location ~^/signin/?$ {
                rewrite ^/signin/?$ / last;
        }

        location /assets/js {
                add_header Content-Encoding gzip;
                root /home/tp/front/;
        }

        location ~^/client/?$ {
                gzip on;
                index index.html;
        }

        location /login {
                proxy_pass http://websocket/api/v1/login;
                proxy_pass_request_body on;
                proxy_http_version 1.1;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
        }

        location /loggedin {
                proxy_pass http://websocket/api/v1/loggedin;
                proxy_pass_request_body on;
                proxy_http_version 1.1;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
        }

        location /logout {
                proxy_pass http://websocket/api/v1/logout;
                proxy_pass_request_body on;
                proxy_http_version 1.1;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
        }

}
